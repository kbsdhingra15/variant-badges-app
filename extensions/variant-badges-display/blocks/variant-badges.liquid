{% comment %}
  Variant Badges Display Block
  Automatically displays badges on product variant options
{% endcomment %}

{{ 'variant-badges.css' | asset_url | stylesheet_tag }}

<div 
  class="variant-badges-container" 
  data-product-id="{{ product.id }}"
  data-enabled="{{ block.settings.enabled }}"
  data-position="{{ block.settings.badge_position }}"
>
  <meta name="variant-badges-app-url" content="{{ shop.metafields.variant_badges.app_url | default: 'https://variant-badges-app-production.up.railway.app' }}">
</div>

<script src="{{ 'variant-badges.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Variant Badges",
  "target": "body",
  "settings": [
    {
      "type": "checkbox",
      "id": "enabled",
      "label": "Enable badges",
      "default": true
    },
    {
      "type": "select",
      "id": "badge_position",
      "label": "Badge position",
      "options": [
        { "label": "Top right", "value": "top-right" },
        { "label": "Top left", "value": "top-left" },
        { "label": "Bottom right", "value": "bottom-right" },
        { "label": "Bottom left", "value": "bottom-left" }
      ],
      "default": "top-right"
    }
  ]
}
{% endschema %}